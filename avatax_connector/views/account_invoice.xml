<?xml version="1.0"?>
<odoo>
    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="invoice_doc_no" attrs="{'invisible': [('type','!=','out_refund')]}"/> 
            </field>
            <xpath expr="//notebook/page[1]/field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="before">
                <field name="tax_amt" readonly="1" groups="avatax_connector.group_avatax_view"/>
            </xpath>
            <xpath expr="/form/sheet/group/group[2]/field[@name='user_id']" position="after">
                <field name="exemption_code" readonly="1"/>
                <field name="exemption_code_id" readonly="1"/>
                <field name="location_code"/>  
                <field name="warehouse_id" options="{'no_create': True}" groups="stock.group_locations"/>
                <field name="is_add_validate" readonly="1" invisible="1"/>
            </xpath>
            <xpath expr="/form/sheet/group" position="after">
                <group colspan="4" col="4" string="Avalara Tax on...">
                    <group>
                        <field name="tax_add_default"/>
                        <field name="tax_add_invoice"/>
                        <field name="tax_add_shipping"/>
                    </group>
                    <group>
                        <field name="shipping_add_id" context="{'show_address': 1}" options='{"always_reload": True}' readonly="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    
    <record id="invoice_form_restricted_edit" model="ir.ui.view">
        <field name="name">invoice.form.view.editable</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="invoice_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_manager')])]"/>
        <field name="arch" type="xml">
            <field name='exemption_code' position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
            <field name='exemption_code_id' position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>
</odoo>
