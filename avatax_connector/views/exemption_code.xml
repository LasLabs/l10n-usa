<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="exemption_code_view_form" model="ir.ui.view">
        <field name="name">exemption.code.form.view</field>
        <field name="model">exemption.code</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Exemption Code">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="exemption_code_action" model="ir.actions.act_window">
        <field name="name">Exemption Code</field>
        <field name="res_model">exemption.code</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="exemption_code_action" id="exemption_code_menu" parent="avatax_menu" sequence="25"/>
</odoo>
