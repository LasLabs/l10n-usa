<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product.view_template_property_form" model="ir.ui.view">
        <field name="name">product.template.weight.oz</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.view_template_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='weight']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@name='weight']" position="after">
                    <div class="o_row" name="weight_oz">
                        <field name="weight_oz"/>
                        <span>oz</span>
                    </div>
                </xpath>
            </field>
    </record>

</odoo>
